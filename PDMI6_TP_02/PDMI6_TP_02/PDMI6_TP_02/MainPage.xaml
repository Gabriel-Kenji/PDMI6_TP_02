<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDMI6_TP_02.MainPage">

    <StackLayout Margin="20,20,20,20">
        <Label Text="Style Resources"
               HorizontalOptions="Center"
               FontSize="Large" />
        <Button Text="ESTILO PADRÃO"
                Clicked="EstiloPadrao"
                TextColor="White"
                BackgroundColor="Blue"
                CornerRadius="5"
                WidthRequest="150"
                HeightRequest="50" />
        <Button Text="ESTILO DINÂMICO"
                Clicked="EstiloDinamico"
                TextColor="White"
                BackgroundColor="Blue"
                CornerRadius="5"
                WidthRequest="150"
                HeightRequest="50" />
        <Button Text="ESTILO EVENT TRIGGRES"
                Clicked="EventTriggers"
                TextColor="White"
                BackgroundColor="Blue"
                CornerRadius="5"
                WidthRequest="150"
                HeightRequest="50" />
        <Button Text="ESTILO GLOBAL"
                TextColor="White"
                BackgroundColor="Blue"
                CornerRadius="5"
                WidthRequest="150"
                HeightRequest="50" />
        <Label Text="Passar parametro"
               HorizontalOptions="Center"
               FontSize="Large" />
        <Button Text="ESTILO HOME"
                Clicked="Home"
                TextColor="White"
                BackgroundColor="Blue"
                CornerRadius="5"
                WidthRequest="150"
                HeightRequest="50" />
        <Button Text="MESSAGING CENTER"
                TextColor="White"
                BackgroundColor="Blue"
                CornerRadius="5"
                WidthRequest="150"
                HeightRequest="50" />
        <Label Text="ListView"
               HorizontalOptions="Center"
               FontSize="Large" />
        <Button Text="SIMPLES"
                Clicked="ViewSimples"
                TextColor="White"
                BackgroundColor="Blue"
                CornerRadius="5"
                WidthRequest="150"
                HeightRequest="50" />
        <Button Text="CLASSES COMPLEXA"
                TextColor="White"
                BackgroundColor="Blue"
                CornerRadius="5"
                WidthRequest="150"
                HeightRequest="50" />
        <Button Text="PRODUTO"
                Clicked="Produto"
                TextColor="White"
                BackgroundColor="Blue"
                CornerRadius="5"
                WidthRequest="150"
                HeightRequest="50" />
    </StackLayout>

</ContentPage>
