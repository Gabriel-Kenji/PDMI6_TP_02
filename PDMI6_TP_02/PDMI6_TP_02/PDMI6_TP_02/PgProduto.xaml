<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDMI6_TP_02.PgProduto">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Entry Placeholder="Código"
                   x:Name="txtId" Keyboard="Numeric"/>
            <Editor Placeholder="Descrição"
                   x:Name="txtDescricao" 
                   HeightRequest="130" />
            <Entry Placeholder="Categoria"
                   x:Name="txtCategoria" />
            <Entry Placeholder="Quantidade"
                   x:Name="txtQuantidade" Keyboard="Numeric" />
            <Entry Placeholder="Preço"
                   x:Name="txtPreco" Keyboard="Numeric" />

            <Button Text="Salvar"
                    Clicked="btnSave"
                    WidthRequest="150"
                    HeightRequest="75" 
                    TextColor="White"
                    BackgroundColor="Green"
                    VerticalOptions="Center"/>
            <Button Text="VOLTAR"
                TextColor="White"
                BackgroundColor="Blue"
                CornerRadius="5"
                WidthRequest="150"
                HeightRequest="75" 
                VerticalOptions="EndAndExpand"
                Clicked="Voltar"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>